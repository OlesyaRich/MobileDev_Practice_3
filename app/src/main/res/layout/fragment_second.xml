<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/t_pageName"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:gravity="center"
        android:text="Choose your cat!"
        android:textSize="36dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/t_catName"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:gravity="center"
        android:textSize="@dimen/Header2" />
    <ImageView
        android:id="@+id/i_image1"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:src="@drawable/cheetan" />
    <Button
        android:id="@+id/b_button1"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="3"
        android:layout_column="0"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Cheetan" />
    <ImageView
        android:id="@+id/i_image2"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:adjustViewBounds="true"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/puma" />
    <Button
        android:id="@+id/b_button2"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="3"
        android:layout_column="1"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Puma" />

    <ImageView
        android:id="@+id/i_image3"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:src="@drawable/lynx" />
    <Button
        android:id="@+id/b_button3"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="5"
        android:layout_column="0"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Lynx" />
    <ImageView
        android:id="@+id/i_image4"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:adjustViewBounds="true"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="4"
        android:layout_column="1"
        android:src="@drawable/irbis" />
    <Button
        android:id="@+id/b_button4"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_row="5"
        android:layout_column="1"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Irbis" />

</GridLayout>

